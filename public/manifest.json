{
  "manifest_version": 2,
  "name": "Page Recorder",
  "version": "0.0.2",
  "background": {
      "scripts": ["background.js"]
  },
  "browser_action": {
      "default_icon": "test.png",
      "default_popup": "index.html",
      "default_title": "Page Recorder"
  },
  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["content.js"]
      }
  ],
  "permissions": [
      "storage",
      "downloads"
  ]
}